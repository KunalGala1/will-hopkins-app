{
  "events": {
    "metadata": {
      "action": "/dashboard/events",
      "enctype": "multipart/form-data",
      "name": "events",
      "display": "Event",
      "sitemap": {
        "changefreq": "daily",
        "priority": 0.6
      },
      "map": {
        "thead": ["title", "date", "time", "location"],
        "tbody": ["title", { "type": "date", "key": "date" }, { "type": "time", "key": "time" }, "location"]
      }
    },
    "fields": [
      { "name": "title", "required": true },
      { "type": "hidden", "name": "slug" },
      {
        "tag": "textarea",
        "name": "shortDescription",
        "label": "short description"
      },
      { "type": "date", "name": "date", "label": "Start date" },
      { "type": "date", "name": "endDate", "label": "End date (optional)" },
      { "type": "time" },
      { "type": "url", "label": "URL" },
      { "name": "location" },
      { "type": "file", "name": "image", "required": true },
      {
        "tag": "textarea",
        "name": "longDescription",
        "label": "long description"
      }
    ]
  },
  "works": {
    "metadata": {
      "action": "/dashboard/works",
      "enctype": "multipart/form-data",
      "name": "works",
      "display": "Work",
      "map": {
        "thead": ["title", "composer", "year", "tag", "description"],
        "tbody": ["title", "composer", "year", "tag", "description"]
      }
    },
    "fields": [
      { "name": "title", "required": true },
      { "name": "composer" },
      { "name": "year" },
      {
        "tag": "select",
        "name": "tag",
        "options": ["solo", "chamber", "ensemble", "orchestral", "electronic", "vocal", "choral", "opera", "dance", "theatre", "film", "installation", "other"]
      },
      { "tag": "textarea", "name": "description" }
    ]
  },
  "videos": {
    "metadata": {
      "action": "/dashboard/videos",
      "name": "videos",
      "display": "Video",
      "map": {
        "thead": ["title"],
        "tbody": ["title"]
      }
    },
    "fields": [
      { "tag": "textarea", "name": "title", "required": true },
      {
        "tag": "textarea",
        "name": "shortDescription",
        "label": "short description"
      },
      { "tag": "textarea", "name": "video" }
    ]
  },
  "bio": {
    "metadata": {
      "action": "/dashboard/bio",
      "name": "bio",
      "display": "Bio"
    },
    "fields": [
      { "type": "file", "name": "image" },
      { "tag": "textarea", "name": "quote" },
      { "tag": "textarea", "name": "bio" },
      { "type": "file", "name": "shortBioFile", "label": "Short Bio ZIP File", "accept": "application/zip" },
      { "type": "file", "name": "longBioFile", "label": "Long Bio ZIP File", "accept": "application/zip" }
    ]
  },
  "quote": {
    "metadata": {
      "action": "/dashboard/quote",
      "name": "quote",
      "display": "Quote"
    },
    "fields": [{ "name": "quote" }, { "name": "attribution" }]
  },
  "intro": {
    "metadata": {
      "action": "/dashboard/intro",
      "name": "intro",
      "display": "Intro"
    },
    "fields": [{ "tag": "textarea", "name": "intro" }]
  },
  "news": {
    "metadata": {
      "action": "/dashboard/news",
      "name": "news",
      "heading": "News"
    },
    "fields": [{ "tag": "textarea", "name": "news" }]
  }
}
