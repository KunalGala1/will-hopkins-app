<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Will Hopkins | Dashboard</title>
  <%- include('../partials/head') %>
</head>

<body class="dashboard">
  <%- include('../partials/aside') %>
  <script>
    document.querySelector('aside ul li:nth-child(2) a')
      .classList.add('active');
  </script>
  <main class="sp-aside-left">
    <!-- Quote Form -->
    <%- include('../partials/form', quoteFormData) %>

    <!-- Intro Form -->
    <%- include('../partials/form', introFormData) %>

    <!-- News Form -->
    <%- include('../partials/form', newsFormData) %>
  </main>
</body>

</html>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll('.dashboard-form--wrapper').forEach(el => el.classList.add("small"))
  })
</script>